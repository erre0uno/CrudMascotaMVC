@model MVCMascota.Models.Historia

@{
    ViewData["Title"] = "Crear Historia";
}

<h4><i class="fa-regular fa-folder-open"></i> &nbsp;Crear</h4>

<h4>Historia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input type="" asp-for="FechaCreacion" class="form-control" value="@DateTime.Now.ToString()" readonly />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostico" class="control-label"></label>
                <input asp-for="Diagnostico" class="form-control" />
                <span asp-validation-for="Diagnostico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicamentos" class="control-label"></label>
                <input asp-for="Medicamentos" class="form-control" />
                <span asp-validation-for="Medicamentos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MascotaId" class="control-label"></label>
                <select asp-for="MascotaId" class ="form-control" asp-items="ViewBag.MascotaId"></select>
            </div>
            <div class="form-group">
                <p></p>
                <button type="submit" class="btn btn-success" value="Create">
                    <i class="fa-regular fa-floppy-disk"></i>&nbsp;Guardar
                </button>
                &nbsp;&nbsp;
                <a class="btn btn-primary table-btn" asp-action="Index">
                    <i class="fa-solid fa-rotate-left"></i>&nbsp;Regresar
                </a>
            </div>            
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
