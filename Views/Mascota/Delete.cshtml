@model MVCMascota.Models.Mascota

@{
    ViewData["Title"] = "Eliminar";
}

<h4><i class="fa-solid fa-paw"></i> &nbsp;Eliminar</h4>

<h3 style="color: red;"> <i class="fa-solid fa-triangle-exclamation"></i> &nbsp; ¿ Esta seguro de eliminar el registro ?</h3>

<div>
    <h4>Mascota</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Especie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Especie)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Raza)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Raza)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dueno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dueno.DuenoId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Medico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Medico.MedicoId)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="MascotaId" />
        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i> &nbsp;Eliminar 
        </button>
        &nbsp;
        <a class="btn btn-primary table-btn" asp-action="Index">
            <i class="fa-solid fa-rotate-left"></i> Regresar
        </a>
    </form> 
</div>
