@model IEnumerable<MVCMascota.Models.Medico>

@{
    ViewData["Title"] = "Listado";
}

<h4><i class="fa-solid fa-user-doctor"></i> &nbsp;Veterinario</h4>

<p>
    <a class="btn btn-success table-btn" asp-action="Create">
        <i class="fa-solid fa-plus"></i>&nbsp;Nuevo Veterinario
    </a>
</p>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarjeta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarjeta)
                </td>
                <td>
                    <a class="btn btn-warning table-btn btn-sm" asp-action="Edit" asp-route-id="@item.MedicoId">
                        <i class="fa-regular fa-pen-to-square"></i>                    
                    </a>  &nbsp;
                    <a class="btn btn-info table-btn btn-sm" asp-action="Details" asp-route-id="@item.MedicoId">
                        <i class="fa-solid fa-circle-info"></i>
                    </a>  &nbsp;
                    <a class="btn btn-danger table-btn btn-sm" asp-action="Delete" asp-route-id="@item.MedicoId">
                        <i class="fa-solid fa-trash"></i>
                    </a>  &nbsp;
                    <a class="btn btn-success table-btn btn-sm" asp-action="DetailsList" asp-route-id="@item.MedicoId">
                        <i class="fa-solid fa-paw"></i>
                        Mascotas
                    </a>    
                </td>
            </tr>
        }
    </tbody>
</table>
