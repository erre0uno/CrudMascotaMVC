@model MVCMascota.Models.Medico

@{
    ViewData["Title"] = "Eliminar";
}

<h4><i class="fa-solid fa-user-doctor"></i> &nbsp;Eliminar</h4>

<h3 style="color: red;"> <i class="fa-solid fa-triangle-exclamation"></i> &nbsp; ¿ Esta seguro de eliminar el registro ?</h3>

<div>
    <h4>Medico</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tarjeta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tarjeta)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="MedicoId" />
        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i> &nbsp;Eliminar 
        </button>
        &nbsp;
        <a class="btn btn-primary table-btn" asp-action="Index">
            <i class="fa-solid fa-rotate-left"></i> Regresar
        </a>
    </form> 
</div>
